<h1 class="font-bold text-4xl">Topic Order</h1>

<ul class="mt-8 list-disc">
  <% @sections.each do |section| %>
    <li class="mt-4">
      <a href="<%= section.id  %>" class="text-blue-500 hover:underline"><%= section.title %></a>

      <ul class="mt-2 pl-4" style="list-style-type: circle;">
        <% section.sub_sections.each do |sub| %>
          <li>
            <a href="<%= sub.id  %>" class="text-gray-500 hover:underline"><%= sub.title %></a>
          </li>
        <% end %>
      </ul>
    </li>
  <% end %>
</ul>
