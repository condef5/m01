<li class="mt-3">
  <h2 class="text-theme-red text-2xl" id="<%= section.id %>"> <%= section.title %> </h2>

  <ul class="pl-8 section list-disc">
    <% section.topics.each do |topic| %>
      <li class="mt-1">
        <div class="flex gap-2">
          <%= link_to topic.title, "#", class: "text-blue-500 hover:underline" %>

          <% if topic.video.present?  %>
            <%= link_to topic.video, target: "_blank", class: "border-b-2 border-transparent hover:border-theme-red text-theme-red opacity-60 hover:opacity-100 flex gap-1 text-sm items-center" do %>
              <svg viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" class="css-i6dzq1">
                <path d="M22.54 6.42a2.78 2.78 0 0 0-1.94-2C18.88 4 12 4 12 4s-6.88 0-8.6.46a2.78 2.78 0 0 0-1.94 2A29 29 0 0 0 1 11.75a29 29 0 0 0 .46 5.33A2.78 2.78 0 0 0 3.4 19c1.72.46 8.6.46 8.6.46s6.88 0 8.6-.46a2.78 2.78 0 0 0 1.94-2 29 29 0 0 0 .46-5.25 29 29 0 0 0-.46-5.33z"></path><polygon points="9.75 15.02 15.5 11.75 9.75 8.48 9.75 15.02"></polygon>
              </svg>
              Video
            <% end %>
          <% end %>
        </div>
      </li>
    <% end %>
  </ul>

  <ul class="list-disc ml-8">
    <% section.sub_sections.each do |sub| %>
      <% if sub.topics.any? %>
        <%= render partial: "home/sub_topic", locals: { section: sub } %>
      <% end %>
    <% end %>
  </ul>
</li>
